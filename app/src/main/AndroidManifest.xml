<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ycdev.android.uidemo">

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true" >
        <activity
            android:name="me.ycdev.android.uidemo.LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="me.ycdev.android.uidemo.drawables.DrawablesActivity"
            android:label="@string/module_drawables_title" />

        <activity
            android:name="me.ycdev.android.uidemo.drawables.ShapesActivity"
            android:label="@string/module_shapes_title" />

        <activity
            android:name="me.ycdev.android.uidemo.drawables.TransitionsActivity"
            android:label="@string/module_transitions_title" />
    </application>

</manifest>
